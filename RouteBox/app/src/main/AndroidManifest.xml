<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 앨범 및 카메라 접근 권한 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- GPS 권한 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 네트워크를 이용한 위치 식별 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 네트워크 및 GPS를 이용한 위치 식별 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_LOCATION"
        android:minSdkVersion="34" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <!-- GPS 위치 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 인앱 결제 -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.daval.routebox.presentation.config.ApplicationClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RouteBox"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <service
            android:name=".presentation.ui.route.GPSBackgroundService"
            android:enabled="true" android:exported="false"
            android:foregroundServiceType="location" />
        <activity
            android:name=".presentation.ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:host="oauth"
                    android:scheme="kakao${KAKAO_API_KEY}" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.auth.LoginActivity" />
        <activity android:name=".presentation.ui.MainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.ui.auth.PermissionActivity"/>
        <activity android:name=".presentation.ui.auth.SignupActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".presentation.ui.seek.wallet.WalletActivity" />
        <activity android:name=".presentation.ui.seek.wallet.ChargeActivity" />
        <activity android:name=".presentation.ui.seek.wallet.RefundActivity" />
        <activity android:name=".presentation.ui.seek.wallet.RefundTermsContentActivity" />
        <activity android:name=".presentation.ui.seek.wallet.RefundCompleteActivity" />
        <activity android:name=".presentation.ui.common.routePreview.RoutePreviewDetailActivity" />
        <activity android:name=".presentation.ui.seek.comment.CommentActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".presentation.ui.seek.search.FilterActivity"/>
        <activity android:name=".presentation.ui.route.write.RouteCreateActivity"/>
        <activity android:name=".presentation.ui.route.write.RouteWriteActivity" />
        <activity android:name=".presentation.ui.route.RouteActivityActivity" />
        <activity android:name=".presentation.ui.route.write.tracking.RoutePictureAlbumActivity" />
        <activity android:name=".presentation.ui.route.RouteDetailActivity"/>
        <activity android:name=".presentation.ui.route.RouteWriteCompleteActivity" />
        <activity android:name=".presentation.ui.route.RouteCompleteActivity" />
        <activity android:name=".presentation.ui.route.write.RouteNotYetActivity"/>
        <activity android:name=".presentation.ui.route.edit.RouteEditBaseActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.ui.route.edit.RouteCompleteTagActivity"/>
        <activity android:name=".presentation.ui.common.report.ReportFeedActivity"/>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="${KAKAO_API_KEY}" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAPS_API_KEY}" />
    </application>

</manifest>
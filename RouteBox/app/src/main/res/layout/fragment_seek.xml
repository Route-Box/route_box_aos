<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="coupon"
            type="java.lang.Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/seek_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/route_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/route_big"
                style="@style/body_b_l"
                android:textColor="@color/gray1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/box_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/box_big"
                style="@style/body_b_l"
                android:textColor="@color/main"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/route_title" />

            <ImageView
                android:id="@+id/top_search_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/top_point_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_point"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/top_search_iv" />

            <ImageView
                android:id="@+id/top_coupon_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coupon"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/top_point_iv" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="-8dp"
                android:layout_marginBottom="-2dp"
                android:visibility="@{coupon == 0 ? View.GONE : View.VISIBLE}"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/main_gradient_bottom"
                app:cardElevation="0dp"
                app:cardCornerRadius="13dp"
                app:layout_constraintBottom_toBottomOf="@id/top_coupon_iv"
                app:layout_constraintEnd_toEndOf="@id/top_coupon_iv">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(coupon)}"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:includeFontPadding="false" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/seek_top_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/seek_home_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/item_seek_home_route"
                app:layout_constraintTop_toBottomOf="@id/seek_top_bar"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
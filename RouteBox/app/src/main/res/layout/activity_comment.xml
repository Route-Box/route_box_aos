<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.routebox.presentation.ui.seek.comment.CommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/comment_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/comment_back_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"/>

            <TextView
                android:id="@+id/comment_post_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:text="@{viewModel.postTitle}"
                tools:text="게시물 제목"
                style="@style/body_b_l"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comment_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{viewModel.commentList.isEmpty ? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/comment_top_ll"
            app:layout_constraintBottom_toTopOf="@id/comment_input_ll"
            tools:listitem="@layout/item_comment"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/comment_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:textColor="@color/gray1"
            android:textAlignment="center"
            android:drawableTop="@drawable/img_empty"
            android:text="@string/comment_empty"
            android:visibility="@{viewModel.commentList.isEmpty ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/comment_top_ll"
            app:layout_constraintBottom_toBottomOf="@id/comment_input_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.35"
            style="@style/body_r_s"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray6"
            app:layout_constraintBottom_toTopOf="@id/comment_input_ll"/>

        <LinearLayout
            android:id="@+id/comment_input_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/comment_input_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:background="@color/transparent"
                android:text="@={viewModel.content}"
                android:hint="@string/comment_hint"
                android:textColorHint="@color/gray4"
                style="@style/mo_body1_16pt"/>

            <ImageView
                android:id="@+id/comment_send_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_comment_send"
                android:onClick="@{() -> viewModel.postComment()}"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
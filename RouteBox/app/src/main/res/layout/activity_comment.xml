<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.seek.comment.CommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/comment_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/comment_back_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/comment_post_title_tv"
                style="@style/body_b_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@{viewModel.routeName}"
                tools:text="게시물 제목" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comment_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{viewModel.commentList.isEmpty ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/comment_input_ll"
            app:layout_constraintTop_toBottomOf="@id/comment_top_ll"
            tools:listitem="@layout/item_comment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/comment_empty_tv"
            style="@style/body_r_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/img_empty"
            android:drawablePadding="16dp"
            android:text="@string/comment_empty"
            android:textAlignment="center"
            android:textColor="@color/gray1"
            android:visibility="@{viewModel.commentList.isEmpty ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/comment_input_ll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment_top_ll"
            app:layout_constraintVertical_bias="0.35" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:orientation="horizontal"
            android:visibility="@{viewModel.isEditMode ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@id/comment_input_ll">

            <ImageView
                android:id="@+id/comment_cancel_btn_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:onClick="@{() -> viewModel.resetToWriteMode()}"
                android:src="@drawable/ic_comment_cancel" />

            <TextView
                android:id="@+id/comment_cancel_tv"
                style="@style/body_r_xs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="11dp"
                android:layout_marginStart="6dp"
                android:background="@color/gray2"
                android:minHeight="18dp"
                android:text="@string/comment_cancel"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/comment_input_ll" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray6"
            app:layout_constraintBottom_toTopOf="@id/comment_input_ll" />

        <LinearLayout
            android:id="@+id/comment_input_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/comment_input_et"
                style="@style/mo_body1_16pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/transparent"
                android:hint="@string/comment_hint"
                android:text="@={viewModel.content}"
                android:textColorHint="@color/gray4" />

            <ImageView
                android:id="@+id/comment_send_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:onClick="@{() -> viewModel.sendComment()}"
                android:src="@drawable/ic_comment_send" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/birth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_birth"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            style="@style/heading_m"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/birth_title"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/birth_year_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/signup_birth_yy"
                android:inputType="number"
                android:textColorHint="@color/gray5"
                android:textColor="@color/title_black"
                android:textCursorDrawable="@null"
                android:layout_weight="0.34"
                android:maxLength="4"
                android:theme="@style/EditTextTheme"
                style="@style/body_r_l" />

            <EditText
                android:id="@+id/birth_month_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:hint="@string/signup_birth_mm"
                android:inputType="number"
                android:textColorHint="@color/gray5"
                android:textColor="@color/title_black"
                android:textCursorDrawable="@null"
                android:layout_weight="0.33"
                android:maxLength="2"
                android:theme="@style/EditTextTheme"
                style="@style/body_r_l" />

            <EditText
                android:id="@+id/birth_day_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/signup_birth_dd"
                android:inputType="number"
                android:textColorHint="@color/gray5"
                android:textColor="@color/title_black"
                android:textCursorDrawable="@null"
                android:layout_weight="0.33"
                android:maxLength="2"
                android:theme="@style/EditTextTheme"
                style="@style/body_r_l" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
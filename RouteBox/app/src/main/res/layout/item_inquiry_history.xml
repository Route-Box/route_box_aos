<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="inquiry"
            type="com.daval.routebox.domain.model.Inquiry" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp">

        <TextView
            android:id="@+id/inquiry_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{inquiry.content}"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inquiry_result"
            style="@style/body_r_m"
            tools:text="문의 내역문의 내역문의 내역문의 내역문의 내역문의 내역문의 내역" />

        <TextView
            android:id="@+id/inquiry_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{inquiry.status}"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/inquiry_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/body_r_s"
            tools:text="답변 대기" />

        <TextView
            android:id="@+id/inquiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray4"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/inquiry_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/body_r_s"
            tools:text="2000.00.00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="weather"
            type="com.daval.routebox.domain.model.WeatherData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tomorrow_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@{Integer.parseInt(weather.fcstTime) == 0 ? @color/main : @android:color/transparent}"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:id="@+id/weather_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.parseInt(weather.fcstTime) == 0 ? @string/tomorrow : @string/weather_time_hour(String.valueOf(Integer.parseInt(weather.fcstTime)))}"
                android:textColor="@{Integer.parseInt(weather.fcstTime) == 0 ? @color/white : @color/gray2}"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/body_r_s"
                tools:text="내일" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00시"
                android:visibility="invisible"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/body_r_s" />

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/weather_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:padding="2dp"
            app:layout_constraintDimensionRatio="1:1"
            app:imageSrc="@{weather.weatherType.weatherImg}"
            app:layout_constraintTop_toBottomOf="@id/tomorrow_cv"
            app:layout_constraintStart_toStartOf="@id/tomorrow_cv"
            app:layout_constraintEnd_toEndOf="@id/tomorrow_cv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{weather.tmp}"
            app:layout_constraintTop_toBottomOf="@id/weather_iv"
            app:layout_constraintStart_toStartOf="@id/weather_iv"
            app:layout_constraintEnd_toEndOf="@id/weather_iv"
            style="@style/body_b_s" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.routebox.presentation.ui.route.write.RouteCompleteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/filter_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/filter_back_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_horizontal"
                android:text="@string/filter_appbar_title"
                android:visibility="invisible"
                style="@style/body_b_l"/>

            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"/>

        </LinearLayout>

        <TextView
            android:id="@+id/filter_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            android:text="@string/route_style_title"
            app:layout_constraintTop_toBottomOf="@id/filter_top_ll"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/heading_m"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/filter_option_sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintTop_toBottomOf="@id/filter_title_tv"
            app:layout_constraintBottom_toTopOf="@id/complete_btn"
            android:fillViewport="true">

            <FrameLayout
                android:id="@+id/fragment_route_style_frm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="38dp"
                android:layout_marginTop="20dp"
                tools:layout="@layout/fragment_route_style"/>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/complete_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/done_btn"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="28dp"
            android:enabled="@{viewModel.isEnabledButton}"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"
            android:background="@drawable/selector_main_btn"
            android:textColor="@drawable/selector_main_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
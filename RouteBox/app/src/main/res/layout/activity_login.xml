<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/login_main_ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="112dp"
            android:contentDescription="@string/cd_app_logo"
            android:src="@drawable/ic_logo_walk"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/login_main_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/login_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_ver2"
            android:textSize="32sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/app_name_color"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/login_main_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_kakao_btn" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_kakao_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#FEE500"
            android:background="@drawable/radius_40"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_main_tv"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <ImageView
                android:id="@+id/login_kakao_ic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/ic_kakao"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/login_kakao" />

            <TextView
                android:id="@+id/login_kakao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kakao"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/login_kakao_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/body_b_m" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.daval.routebox.presentation.utils.DateConverter"/>
        <variable
            name="multipleImages"
            type="java.lang.Boolean" />
        <variable
            name="preview"
            type="com.daval.routebox.domain.model.RoutePreview" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/image_vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="@{multipleImages ? View.VISIBLE : View.GONE}"
                tools:background="@color/gray5"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/image_ci"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="12dp"
                android:visibility="@{preview.routeImageUrls.size() > 0 ? View.VISIBLE : View.GONE}"
                app:ci_orientation="horizontal"
                app:ci_drawable="@drawable/indicator_selected"
                app:ci_drawable_unselected="@drawable/indicator_unselected"
                app:layout_constraintTop_toBottomOf="@id/image_vp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_top_bar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingHorizontal="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buy_point_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp"
                    android:text="@string/buy_point"
                    android:background="@drawable/radius_100"
                    android:layout_marginEnd="6dp"
                    style="@style/small_fill_default"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/writer_cl"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingHorizontal="25dp"
                app:layout_constraintTop_toBottomOf="@id/image_ci"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/writer_profile_cv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" >

                    <ImageView
                        android:id="@+id/writer_profile_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:src="@drawable/ic_profile_default"
                        app:imageUrl="@{preview.profileImageUrl}"
                        app:placeHolder="@{@drawable/ic_profile_default}"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/writer_profile_cv"
                    app:layout_constraintTop_toTopOf="@id/writer_profile_cv"
                    app:layout_constraintBottom_toBottomOf="@id/writer_profile_cv">

                    <TextView
                        android:id="@+id/nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{preview.nickname}"
                        android:textColor="@color/title_black"
                        style="@style/body_b_s"
                        tools:text="사용자 이름"/>

                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2일 전"
                        android:text="@{preview == null ? `` : DateConverter.getFormattedCreatedDateTime(preview.createdAt)}"
                        android:textColor="@color/gray3"
                        style="@style/body_r_xs" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/more_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/text_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="22dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/writer_cl"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="[후쿠오카] 여자 혼자 여행 완전 자세히!"
                    android:text="@{preview.routeName}"
                    android:textColor="#222222"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/body_b_l" />

                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="6월의 후쿠오카는 비가 너무 많이 와서 많은 사람들이 비추천하지만, 그래도 6월에 꼭 가고 싶은 사람들을 위한 루트! #일본 \n비가 와도 괜찮은 곳들로 다녀왔어요. 비가 오니 더욱 감성 넘쳐요! "
                    android:text="@{preview.routeDescription}"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/body_r_m" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/download_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray3"
                tools:text="10"
                android:text="@{String.valueOf(preview.purchaseCount)}"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:drawableStartCompat="@drawable/ic_download"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_cl"
                style="@style/body_b_xs" />

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray3"
                tools:text="10"
                android:text="@{String.valueOf(preview.commentCount)}"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                app:drawableStartCompat="@drawable/ic_comment"
                app:layout_constraintStart_toEndOf="@id/download_tv"
                app:layout_constraintTop_toTopOf="@id/download_tv"
                app:layout_constraintBottom_toBottomOf="@id/download_tv"
                style="@style/body_b_xs" />

            <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/line_color"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/comment_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/route_preview_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/route_style_preview"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="30dp"
                style="@style/body_b_l"
                app:layout_constraintTop_toBottomOf="@+id/bottom_line"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/route_preview_tag_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="52dp"
                tools:listitem="@layout/item_route_tag"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/route_preview_tv"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
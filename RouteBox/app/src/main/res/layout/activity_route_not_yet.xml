<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/route_not_yet_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/route_not_yet_close_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/route_not_yet_text_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/route_not_yet_top_ll">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아직 여행을 시작하지 않았어요"
                style="@style/heading_m"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="여행의 소중한 순간을 루트박스와 함께해요"
                android:textColor="@color/gray1"
                style="@style/body_r_m"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/route_not_yet_image_iv"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo"
            app:layout_constraintTop_toBottomOf="@id/route_not_yet_text_ll"
            app:layout_constraintBottom_toTopOf="@id/route_not_yet_cancel_route_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:textAlignment="center"
            android:text="여행 시간이 되면 자동으로\n여행 루트를 만들어드릴게요!"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/gray1"
            android:lineSpacingExtra="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/route_not_yet_image_iv"/>

        <TextView
            android:id="@+id/route_not_yet_cancel_route_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="18dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:text="여행 취소하기"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/large_outline_default"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
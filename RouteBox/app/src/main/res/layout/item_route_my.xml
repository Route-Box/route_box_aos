<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="route"
            type="com.example.routebox.domain.model.Route" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_search_result_post_cover_cv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/item_search_result_post_cover_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_empty" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/route_private_dim"
                android:visibility="@{route.isPrivate ? View.VISIBLE : View.GONE}" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_gravity="center"
                android:visibility="@{route.isPrivate ? View.VISIBLE : View.GONE}" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/item_search_result_post_cover_cv"
            app:layout_constraintStart_toEndOf="@id/item_search_result_post_cover_cv"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_route_my_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="@{route.title}"
                    tools:text="루트 제목"
                    style="@style/body_r_m"/>

                <ImageView
                    android:id="@+id/item_route_my_more_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    app:tint="@color/gray3"/>

            </LinearLayout>

            <TextView
                android:id="@+id/item_route_my_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="@{route.content}"
                android:textColor="@color/gray3"
                tools:text="루트 내용"
                style="@style/body_r_s"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_search_result_purchase_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_download"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textColor="@color/gray3"
                    style="@style/body_b_xs"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_search_result_comment_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_comment"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textColor="@color/gray3"
                    style="@style/body_b_xs"/>

                <TextView
                    android:id="@+id/item_search_result_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="2024.05.06"
                    android:textColor="@color/gray3"
                    style="@style/body_r_s"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
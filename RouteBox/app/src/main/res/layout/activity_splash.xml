<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_ic_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="112dp"
            android:contentDescription="@string/cd_app_logo"
            android:src="@drawable/ic_logo_walk_head"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/main_ic_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/main_ic_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="112dp"
            android:contentDescription="@string/cd_app_logo"
            android:src="@drawable/ic_logo_walk_body"
            android:layout_marginTop="5.5dp"
            app:layout_constraintTop_toBottomOf="@id/main_ic_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_main_tv"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/login_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_ver2"
            android:textSize="32sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/app_name_color"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_ic_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="point"
            type="com.example.routebox.domain.model.OwnPoint" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_wallet"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/body_b_l" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="22dp"
            app:layout_constraintTop_toBottomOf="@id/wallet_top_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/ic_wallet_background"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/refund_cv"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{point.nickname}"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/heading_s" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/own_point"
                app:layout_constraintTop_toTopOf="@id/nickname_tv"
                app:layout_constraintBottom_toBottomOf="@id/nickname_tv"
                app:layout_constraintStart_toEndOf="@id/nickname_tv"
                style="@style/heading_s" />

            <TextView
                android:id="@+id/point_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(point.point)}"
                android:textColor="@color/main"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/nickname_tv"
                app:layout_constraintStart_toStartOf="@id/nickname_tv"
                style="@style/heading_l" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textColor="@color/main"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/nickname_tv"
                app:layout_constraintStart_toEndOf="@id/point_tv"
                style="@style/heading_l" />

            <androidx.cardview.widget.CardView
                android:id="@+id/charge_cv"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:backgroundTint="#32425E"
                android:layout_marginTop="32dp"
                app:cardElevation="0dp"
                app:layout_constraintHorizontal_weight="1"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/point_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/refund_cv" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp" >

                    <ImageView
                        android:id="@+id/charge_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_point_mark"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charge"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/charge_iv"
                        style="@style/title_m" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/refund_cv"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="11dp"
                app:rippleColor="@android:color/transparent"
                app:strokeColor="@color/gray5"
                app:strokeWidth="1dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toBottomOf="@id/point_tv"
                app:layout_constraintStart_toEndOf="@id/charge_cv"
                app:layout_constraintEnd_toEndOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp" >

                    <ImageView
                        android:id="@+id/refund_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_refund"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refund"
                        android:textColor="@color/title_black"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/refund_iv"
                        style="@style/title_m" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/point_history_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/point_history"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@id/refund_cv"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/title_xl" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/point_history_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/item_point_history"
                app:layout_constraintTop_toBottomOf="@id/point_history_tv"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/empty_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/point_history_tv"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/empty_iv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="150dp"
                    android:src="@drawable/img_empty"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/empty_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/empty_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_point"
                    android:textColor="@color/gray1"
                    app:layout_constraintTop_toBottomOf="@id/empty_iv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/body_r_s" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
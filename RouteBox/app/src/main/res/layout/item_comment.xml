<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="commentContent"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/item_comment_profile_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp">
                    <ImageView
                        android:id="@+id/item_comment_profile_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/gray5"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/item_comment_userName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="사용자 이름"
                    android:textColor="@color/title_black"
                    android:textSize="12sp"
                    tools:text="박세라"/>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle_fill"/>

                <TextView
                    android:id="@+id/item_comment_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/gray4"
                    android:textSize="12sp"
                    android:text="@string/comment_date"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/comment_more_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/item_comment_content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_vertical"
                android:text="@{commentContent}"
                tools:text="정말 좋은 루트예요!\n도움이 많이 되었습니다. 추천입니다. ~"
                app:layout_constraintTop_toBottomOf="@id/item_comment_profile_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/body_r_xs"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray6"/>

    </LinearLayout>
</layout>
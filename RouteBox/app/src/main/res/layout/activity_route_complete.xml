<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/route_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/complete_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_complete"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/route_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/heading_m" />

        <TextView
            android:id="@+id/complete_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_complete_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toBottomOf="@id/complete_title"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/body_r_m"/>

        <ImageView
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_route_complete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/complete_content"
            app:layout_constraintBottom_toTopOf="@id/finish_btn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finish_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/route_complete_check"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="28dp"
            android:enabled="true"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"
            android:background="@drawable/selector_main_btn"
            android:textColor="@drawable/selector_main_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
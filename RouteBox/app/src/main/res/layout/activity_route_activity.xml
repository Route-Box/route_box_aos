<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.daval.routebox.presentation.utils.DateConverter"/>
        <import type="com.daval.routebox.domain.model.Category" />
        <import type="com.daval.routebox.domain.model.Activity" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.RouteWriteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.isEditMode() ? @string/do_activity_edit : @string/add_activity}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/body_b_l" />

            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/activity_top_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="22dp">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tracking_question"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/heading_m" />

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_location_title"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title_l" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red1_warning"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/location_title"
                    app:layout_constraintBottom_toBottomOf="@id/location_title"
                    app:layout_constraintStart_toEndOf="@id/location_title"
                    style="@style/title_l" />

                <LinearLayout
                    android:id="@+id/activity_searchbox_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/radius_8_outline_gray"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/location_title">

                    <EditText
                        android:id="@+id/search_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:background="@color/transparent"
                        android:text="@={viewModel.placeSearchKeyword}"
                        android:hint="@string/location_search"
                        android:textColorHint="@color/gray4"
                        style="@style/body_r_m"/>

                    <ImageView
                        android:id="@+id/search_place_iv"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:padding="5dp"
                        android:onClick="@{() -> viewModel.searchPlace()}"
                        android:clickable="@{viewModel.placeSearchKeyword.length() == 0 ? false : true}"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_search"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/place_cv"
                    android:layout_width="match_parent"
                    android:layout_height="384dp"
                    android:layout_marginTop="20dp"
                    android:visibility="@{viewModel.placeSearchMode ? View.VISIBLE : View.GONE}"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/gray7"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/activity_searchbox_ll"
                    app:layout_constraintStart_toStartOf="@id/activity_searchbox_ll"
                    app:layout_constraintEnd_toEndOf="@id/activity_searchbox_ll">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/place_rv"
                            android:layout_width="match_parent"
                            android:layout_height="384dp"
                            tools:listitem="@layout/item_kakao_search_place"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.placeSearchResult.size == 0 ? View.GONE : View.VISIBLE}"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/empty_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/img_empty"
                            android:drawablePadding="14dp"
                            android:text="@string/route_place_search"
                            android:visibility="@{viewModel.placeSearchResult.size == 0 ? View.VISIBLE : View.GONE}"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_date_title"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/place_cv"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title_l" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red1_warning"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/date_title"
                    app:layout_constraintBottom_toBottomOf="@id/date_title"
                    app:layout_constraintStart_toEndOf="@id/date_title"
                    style="@style/title_l" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date_content"
                    android:text="@{DateConverter.getFormattedDate(viewModel.date)}"
                    android:layout_marginTop="16dp"
                    tools:text="23년 1월 25일"
                    app:layout_constraintTop_toBottomOf="@id/date_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/common_date_selected_tv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/start_time_tv"
                    android:text="@{DateConverter.getFormattedTime(viewModel.startTimePair)}"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="0dp"
                    tools:text="@string/route_visit_time"
                    app:layout_constraintTop_toBottomOf="@id/date_content"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/common_time_selected_tv" />

                <ImageView
                    android:id="@+id/minus_iv"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:src="@drawable/ic_minus"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/start_time_tv"
                    app:layout_constraintBottom_toBottomOf="@id/start_time_tv"
                    app:layout_constraintStart_toEndOf="@id/start_time_tv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/end_time_tv"
                    android:text="@{DateConverter.getFormattedTime(viewModel.endTimePair)}"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="16dp"
                    tools:text="@string/route_end_time"
                    app:layout_constraintTop_toBottomOf="@id/date_content"
                    app:layout_constraintStart_toEndOf="@id/minus_iv"
                    style="@style/common_time_selected_tv" />

                <TextView
                    android:id="@+id/category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_category_title"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/start_time_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title_l" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red1_warning"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/category_title"
                    app:layout_constraintBottom_toBottomOf="@id/category_title"
                    app:layout_constraintStart_toEndOf="@id/category_title"
                    style="@style/title_l" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/category_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_category"
                    tools:itemCount="5"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/category_etc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="@{viewModel.categoryETC ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@id/category_rv"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/category_etc_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/body_r_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red1_warning"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="@id/category_etc_title"
                        app:layout_constraintBottom_toBottomOf="@id/category_etc_title"
                        app:layout_constraintStart_toEndOf="@id/category_etc_title"
                        style="@style/body_r_xs" />

                    <EditText
                        android:id="@+id/category_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/category_content"
                        android:textColorHint="@color/gray5"
                        android:background="@null"
                        android:textSize="18sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toBottomOf="@id/category_etc_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/category_erase_iv"
                        style="@style/EditTextTheme" />

                    <ImageView
                        android:id="@+id/category_erase_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_close_circle"
                        app:layout_constraintTop_toTopOf="@id/category_et"
                        app:layout_constraintBottom_toBottomOf="@id/category_et"
                        app:layout_constraintStart_toEndOf="@id/category_et"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/owner_line"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/gray5"
                        android:layout_marginTop="6dp"
                        app:layout_constraintTop_toBottomOf="@id/category_et"
                        app:layout_constraintStart_toStartOf="@id/category_et"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/picture_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_picture_title"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/category_etc"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title_l" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/picture_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/picture_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_activity_add_picture" />

                <TextView
                    android:id="@+id/place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_place_title"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/picture_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title_l" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/location_content_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/gray5"
                    app:layout_constraintTop_toBottomOf="@id/place_title"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="20dp"
                        android:paddingHorizontal="16dp">

                        <EditText
                            android:id="@+id/location_content_et"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:hint="@string/route_place_content_title"
                            android:text="@={viewModel.activity.description}"
                            android:background="@color/transparent"
                            android:gravity="top"
                            android:maxLength="40"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/location_content_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(viewModel.activity.description.length())}"
                            android:textColor="@{viewModel.activity.description.length() > 0 ? @color/main : @color/gray4}"
                            style="@style/body_r_s"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/location_content_max" />

                        <TextView
                            android:id="@+id/location_content_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/40"
                            android:textColor="@color/main"
                            style="@style/body_r_s"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/next_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/next_btn"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="28dp"
                    android:enabled="@{viewModel.btnEnabled}"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:background="@drawable/selector_main_btn"
                    android:textColor="@drawable/selector_main_btn"
                    app:layout_constraintTop_toBottomOf="@id/location_content_cv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
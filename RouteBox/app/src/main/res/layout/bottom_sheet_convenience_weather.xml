<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.RouteConvenienceViewModel" />
        <variable
            name="writeViewModel"
            type="com.daval.routebox.presentation.ui.route.write.RouteWriteViewModel" />
        <variable
            name="date"
            type="java.lang.String" />
        <variable
            name="time"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_peekHeight="351dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/convenience_weather_top_cl"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bottom_dialog_radius"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/bottom_sheet_top"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/region_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="21dp"
            android:text="@{viewModel.weatherDepth3Region}"
            app:layout_constraintTop_toBottomOf="@id/convenience_weather_top_cl"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/body_b_s" />

        <ImageView
            android:id="@+id/weather_main_iv"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            app:imageSrc="@{viewModel.weatherMainData.weatherType.weatherImg}"
            app:layout_constraintTop_toBottomOf="@id/region_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/weather_main_tmp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{viewModel.weatherMainData.tmp}"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/weather_main_iv"
            app:layout_constraintStart_toEndOf="@id/weather_main_iv"
            app:layout_constraintBottom_toTopOf="@id/weather_main_text"
            style="@style/heading_l" />

        <TextView
            android:id="@+id/weather_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{viewModel.weatherMainData.weatherType.weatherName}"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/weather_main_tmp_tv"
            app:layout_constraintStart_toEndOf="@id/weather_main_iv"
            app:layout_constraintBottom_toBottomOf="@id/weather_main_iv"
            style="@style/body_r_m" />
        
        <TextView
            android:id="@+id/time_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_time"
            android:layout_marginTop="40dp"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toBottomOf="@id/weather_main_iv"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/body_b_s" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:scrollbars="none"
            tools:itemCount="7"
            tools:listitem="@layout/item_weather"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/time_title_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/weather_update_date(date, time)}"
            android:textColor="@color/gray3"
            android:layout_marginTop="23dp"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="20dp"
            style="@style/body_r_xs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather_rv"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
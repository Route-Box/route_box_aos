<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="placeInfo"
            type="com.daval.routebox.domain.model.ConvenienceCategoryResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{placeInfo.placeName}"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/route_convenience_category_result"
            tools:text="장소 이름"
            style="@style/body_r_m" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/place_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="4dp"
            android:textColor="@color/gray2"
            android:text="@{placeInfo.rating.toString()}"
            android:visibility="@{placeInfo.rating == null ? View.INVISIBLE : View.VISIBLE}"
            tools:text="4.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_name"
            style="@style/body_r_s"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@{placeInfo.isOpen ? @color/title_black : @color/red1_warning}"
            android:text="@{placeInfo.isOpen ? @string/place_is_opening_true : @string/place_is_opening_false}"
            tools:text="영업 중"
            app:layout_constraintTop_toTopOf="@id/place_name"
            app:layout_constraintBottom_toBottomOf="@id/place_rating"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/body_r_s"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray5"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/place_rating"
            app:layout_constraintStart_toStartOf="parent" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
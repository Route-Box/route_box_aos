<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.routebox.presentation.ui.route.RouteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tracking_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="22dp"
            android:background="#99ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:src="@drawable/ic_arrow_left"
                android:paddingVertical="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tracking_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="@drawable/radius_100"
                android:backgroundTint="@color/main"
                android:text="@{@string/progress_tracking + `  `}"
                android:textColor="@{viewModel.isTracking ? @color/white : @color/gray6}"
                android:drawableEnd="@{viewModel.isTracking ? @drawable/ic_pause : @drawable/ic_play}"
                android:onClick="@{() -> viewModel.setIsTracking()}"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/body_r_xs" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/map_cl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/gray6"
                android:background="@drawable/radius_900_outline_gray"
                app:layout_constraintTop_toBottomOf="@id/back_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/map_tb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:background="@drawable/radius_900"
                    app:tabTextColor="@color/gray3"
                    app:tabSelectedTextColor="@color/title_black"
                    app:tabIndicator="@drawable/item_tracking_tab"
                    app:tabIndicatorColor="@color/white"
                    app:tabRippleColor="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" >

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/tracking_tab_1"
                        android:backgroundTint="@color/transparent"
                        style="@style/body_r_s" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/tracking_tab_2"
                        android:backgroundTint="@color/transparent"
                        style="@style/body_r_s" />

                </com.google.android.material.tabs.TabLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/route_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="false"
            app:navGraph="@navigation/nav_route"
            app:layout_constraintTop_toBottomOf="@id/tracking_top_bar"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sub_black"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="22dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_activity"
                android:textColor="@color/white"
                android:layout_marginHorizontal="22dp"
                android:layout_marginVertical="20dp"
                android:drawableEnd="@drawable/ic_plus"
                style="@style/body_b_m" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
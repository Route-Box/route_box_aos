<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_notification"
                style="@style/body_b_l"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/setting_notification_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_notification_1"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            style="@style/body_b_m"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintStart_toStartOf="parent" />
        
        <Switch
            android:id="@+id/notification_1_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/switch_selector"
            android:thumb="@drawable/switch_thumb"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/setting_notification_1"
            app:layout_constraintBottom_toBottomOf="@id/setting_notification_1" />

        <TextView
            android:id="@+id/setting_notification_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_notification_2"
            android:layout_marginStart="22dp"
            android:layout_marginTop="32dp"
            style="@style/body_b_m"
            app:layout_constraintTop_toBottomOf="@id/setting_notification_1"
            app:layout_constraintStart_toStartOf="parent" />
        
        <ImageView
            android:id="@+id/alert_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_alert"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/setting_notification_2"
            app:layout_constraintBottom_toBottomOf="@id/setting_notification_2"
            app:layout_constraintStart_toEndOf="@id/setting_notification_2" />

        <Switch
            android:id="@+id/notification_2_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/switch_selector"
            android:thumb="@drawable/switch_thumb"
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/setting_notification_2"
            app:layout_constraintBottom_toBottomOf="@id/setting_notification_2" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/notification_2_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="22dp"
            android:visibility="gone"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/title_black"
            app:layout_constraintTop_toBottomOf="@id/setting_notification_2"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/notification_2_content_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_notification_2_content"
                    android:textColor="@color/white"
                    android:layout_marginEnd="6dp"
                    style="@style/body_r_s"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/close_iv"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <ImageView
                    android:id="@+id/close_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        
        <ImageView
            android:id="@+id/notification_2_triangle"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_alert_triangle"
            android:layout_marginBottom="-5dp"
            android:layout_marginEnd="-1dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/alert_iv"
            app:layout_constraintBottom_toTopOf="@id/notification_2_cv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.convenience.RouteConvenienceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_dialog_radius"
        app:behavior_peekHeight="351dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_top"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/convenience_content_frm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_top"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout="@layout/fragment_convenience_place"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
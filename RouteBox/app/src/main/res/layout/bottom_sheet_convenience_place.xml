<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.convenience.RouteConvenienceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_dialog_radius"
        app:behavior_peekHeight="351dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_top"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/convenience_criteria_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            android:text="@string/center_point_mine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_top"
            style="@style/body_r_s"/>

        <!-- 장소 없을 때 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/comment_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:drawablePadding="16dp"
            android:textColor="@color/gray1"
            android:textAlignment="center"
            android:drawableTop="@drawable/img_empty"
            android:text="@string/convenience_place_empty"
            android:visibility="@{viewModel.placeCategoryResult.isEmpty ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/convenience_criteria_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/body_r_s"/>

        <!-- 장소 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/place_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/item_convenience_category_result"
            app:layout_constraintTop_toBottomOf="@id/convenience_criteria_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 장소 상세 바텀시트-->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/convenience_criteria_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/route_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@android:drawable/screen_background_dark"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lock_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="26dp"
            android:background="#60000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/route_image"
            app:layout_constraintBottom_toBottomOf="@id/route_image"
            app:layout_constraintStart_toStartOf="parent" >

            <ImageView
                android:id="@+id/lock_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lock_content_cv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/lock_content_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#99000000"
                android:layout_marginTop="18.5dp"
                android:layout_marginBottom="60dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lock_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="24dp">

                    <TextView
                        android:id="@+id/buy_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_buy_1"
                        android:textFontWeight="400"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/body_r_m" />

                    <TextView
                        android:id="@+id/route_kor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/route_kor"
                        android:textColor="@color/white"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintTop_toBottomOf="@id/buy_title_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/buy_title_2"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/buy_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preview_buy_2"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/buy_title_1"
                        app:layout_constraintStart_toEndOf="@id/route_kor"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/body_r_m" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
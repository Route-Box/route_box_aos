<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.RouteWriteViewModel" />
        <variable
            name="convenienceViewModel"
            type="com.daval.routebox.presentation.ui.route.write.convenience.RouteConvenienceViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                class="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/convenience_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scrollbars="none"
                android:layout_marginTop="16dp">

                <RadioGroup
                    android:id="@+id/category_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"/>

            </HorizontalScrollView>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weather_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp">
                    
                    <ImageView
                        android:id="@+id/weather_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:imageSrc="@{convenienceViewModel.weatherMainData.weatherType.weatherImg}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/weather_region_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{convenienceViewModel.weatherDepth3Region}"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/weather_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/weather_tmp_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{convenienceViewModel.weatherMainData.tmp}"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/weather_region_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/weather_tmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â°"
                        app:layout_constraintStart_toEndOf="@id/weather_tmp_value"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/weather_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{convenienceViewModel.weatherMainData.weatherType.weatherName}"
                        android:textColor="@color/weather_name_text"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/weather_tmp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_r_m" />
                    
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/route_convenience_bottom_sheet"
            layout="@layout/bottom_sheet_convenience_place"
            android:visibility="@{convenienceViewModel.selectedConvenience == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
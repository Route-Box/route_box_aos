<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.RouteWriteViewModel" />
        <variable
            name="convenienceViewModel"
            type="com.daval.routebox.presentation.ui.route.write.RouteConvenienceViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.kakao.vectormap.MapView
                android:id="@+id/convenience_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scrollbars="none"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/category_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/category_radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/category_stay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="22dp"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/selector_convenience_category"
                            android:textColor="@drawable/selector_convenience_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/category_stay_default_ic"
                            style="@style/body_r_s" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/category_tour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/selector_convenience_category"
                            android:textColor="@drawable/selector_convenience_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/category_tour_default_ic"
                            style="@style/body_r_s" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/category_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/selector_convenience_category"
                            android:textColor="@drawable/selector_convenience_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/category_food_default_ic"
                            style="@style/body_r_s" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/category_cafe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/selector_convenience_category"
                            android:textColor="@drawable/selector_convenience_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/category_cafe_default_ic"
                            style="@style/body_r_s" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/category_culture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/selector_convenience_category"
                            android:textColor="@drawable/selector_convenience_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/category_culture_default_ic"
                            style="@style/body_r_s" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/category_parking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="22dp"
                            android:background="@drawable/selector_convenience_category"
                            android:textColor="@drawable/selector_convenience_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/category_parking_default_ic"
                            style="@style/body_r_s" />

                    </RadioGroup>

                </LinearLayout>

            </HorizontalScrollView>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weather_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp">
                    
                    <ImageView
                        android:id="@+id/weather_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:imageSrc="@{convenienceViewModel.weatherMainData.weatherType.weatherImg}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/weather_region_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{convenienceViewModel.weatherDepth3Region}"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/weather_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/weather_tmp_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{convenienceViewModel.weatherMainData.tmp}"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/weather_region_tv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/weather_tmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â°"
                        app:layout_constraintStart_toEndOf="@id/weather_tmp_value"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_b_m" />

                    <TextView
                        android:id="@+id/weather_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{convenienceViewModel.weatherMainData.weatherType.weatherName}"
                        android:textColor="@color/weather_name_text"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/weather_tmp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/body_r_m" />
                    
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/route_convenience_bottom_sheet"
            layout="@layout/bottom_sheet_convenience_place"
            android:visibility="@{convenienceViewModel.placeCategoryResult.size() == 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
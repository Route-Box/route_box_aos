<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="route"
            type="com.daval.routebox.domain.model.RecommendRoute" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/route_cv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/route_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imageUrl="@{route.routeImageUrl}"
                app:placeHolder="@{@drawable/ic_thumbnail_default}" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@{route.routeName}"
            style="@style/title_m"
            app:layout_constraintStart_toStartOf="@id/route_cv"
            app:layout_constraintEnd_toEndOf="@id/route_cv"
            app:layout_constraintTop_toBottomOf="@id/route_cv"
            tools:text="제목" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{route.routeDescription}"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/home_route_content"
            app:layout_constraintStart_toStartOf="@id/route_cv"
            app:layout_constraintEnd_toEndOf="@id/route_cv"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            tools:text="설명" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
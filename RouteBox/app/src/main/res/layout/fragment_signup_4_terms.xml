<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/term_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_complete"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            style="@style/heading_m"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <TextView
                android:id="@+id/term_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_term_1"
                style="@style/body_r_s"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/term_1_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/term_1_tv"
                app:layout_constraintTop_toTopOf="@id/term_1_tv"
                app:layout_constraintBottom_toBottomOf="@id/term_1_tv" />

            <ImageView
                android:id="@+id/term_1_check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_term_check_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/term_1_tv"
                app:layout_constraintBottom_toBottomOf="@id/term_1_tv" />

            <TextView
                android:id="@+id/term_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_term_2"
                android:layout_marginTop="20dp"
                style="@style/body_r_s"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/term_1_tv" />

            <ImageView
                android:id="@+id/term_2_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/term_2_tv"
                app:layout_constraintTop_toTopOf="@id/term_2_tv"
                app:layout_constraintBottom_toBottomOf="@id/term_2_tv" />

            <ImageView
                android:id="@+id/term_2_check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_term_check_x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/term_2_tv"
                app:layout_constraintBottom_toBottomOf="@id/term_2_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
       <variable
           name="viewModel"
           type="com.example.routebox.presentation.ui.route.edit.RouteEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_peekHeight="351dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_top_cl"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bottom_dialog_radius">
            <androidx.cardview.widget.CardView
                android:id="@+id/map_top"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                android:backgroundTint="#D9D9D9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-1dp"
            android:paddingHorizontal="22dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/activity_top_cl"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/activity_period_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24.05.06"
                style="@style/body_r_s"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activity_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="22dp"
                android:paddingVertical="20dp"
                android:drawableEnd="@drawable/ic_plus"
                android:text="@string/do_activity_add"
                android:textColor="@color/white"
                android:backgroundTint="@color/sub_black"
                android:background="@drawable/radius_16"
                style="@style/body_b_m"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/item_activity"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
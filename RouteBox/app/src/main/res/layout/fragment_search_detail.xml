<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.routebox.presentation.ui.search.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_detail_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/search_detail_back_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_horizontal"
                android:text="@string/search_appbar_title"
                app:layout_constraintTop_toTopOf="@id/search_detail_back_iv"
                app:layout_constraintBottom_toBottomOf="@id/search_detail_back_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/body_b_l"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/search_detail_search_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/radius_8_outline_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_detail_top_ll">

            <EditText
                android:id="@+id/search_detail_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:background="@color/transparent"
                android:text="@={viewModel.searchWord}"
                android:hint="@string/search_hint"
                android:textColorHint="@color/gray4"
                style="@style/body_r_m"/>
            
            <ImageView
                android:id="@+id/search_detail_search_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="5dp"
                android:onClick="@{viewModel::searchWordRoute}"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_search"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_detail_filter_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/search_detail_search_ll"
            app:layout_constraintStart_toStartOf="@id/search_detail_search_ll"
            app:layout_constraintEnd_toEndOf="@id/search_detail_search_ll">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="'경주' 루트"
                style="@style/body_b_m"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="최근 순"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/ic_arrow_down"
                style="@style/body_r_s"/>

            <ImageView
                android:id="@+id/search_detail_filter_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_filter"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_detail_result_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/search_detail_filter_ll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_search_result"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp">
        
        <TextView
            android:id="@+id/notification_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/title_xl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="날짜" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notification_on"
            android:visibility="@{viewModel.notificationStatus ? View.VISIBLE : View.GONE}"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/notification_date_tv"
            app:layout_constraintTop_toTopOf="@id/notification_date_tv"
            app:layout_constraintBottom_toBottomOf="@id/notification_date_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/notification_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_notification_content" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray5"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@id/content_rv"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.routebox.presentation.ui.route.edit.RouteEditViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="22dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/route_edit_button_ll"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/route_edit_map_cv"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <com.kakao.vectormap.MapView
                        android:id="@+id/kakao_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/route_edit_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/route_edit_input_title"
                    style="@style/title_l"/>

                <com.example.routebox.presentation.utils.ClearableEditText
                    android:id="@+id/route_edit_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:maxLines="1"
                    app:bindText="@={viewModel.routeTitle}"/>

                <TextView
                    android:id="@+id/route_edit_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/route_edit_input_content"
                    style="@style/title_l"/>

                <com.example.routebox.presentation.utils.ClearableEditText
                    android:id="@+id/route_edit_content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:bindText="@={viewModel.routeContent}"/>

                <FrameLayout
                    android:id="@+id/fragment_route_style_frm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="40dp"
                    tools:layout="@layout/fragment_route_style"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/route_edit_button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="28dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/route_edit_activity_edit_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginEnd="4dp"
                android:paddingVertical="18dp"
                android:text="@string/route_edit_activity_edit"
                style="@style/large_outline_default"/>

            <TextView
                android:id="@+id/route_edit_done_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingVertical="18dp"
                android:enabled="@{viewModel.isEnabledButton()}"
                android:text="@string/done_btn"
                style="@style/default_large_button"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
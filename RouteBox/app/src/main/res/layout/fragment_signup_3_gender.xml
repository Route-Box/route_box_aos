<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_gender_title"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            style="@style/heading_m"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/gender_title"
            app:layout_constraintStart_toStartOf="parent">

            <RadioGroup
                android:id="@+id/gender_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gender_m"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_gender"
                    android:textColor="@drawable/selector_gender_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:text="@string/signup_gender_m"
                    style="@style/body_b_m" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/gender_f"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/selector_gender"
                    android:textColor="@drawable/selector_gender_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:text="@string/signup_gender_f"
                    style="@style/body_b_m" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/gender_x"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/selector_gender"
                    android:textColor="@drawable/selector_gender_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:text="@string/signup_gender_x"
                    style="@style/body_b_m" />

            </RadioGroup>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
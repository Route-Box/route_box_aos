<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.auth.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:max="4"
            android:progress="1"
            android:progressBackgroundTint="@color/gray6"
            android:progressTint="@color/title_black"
            style="@android:style/Widget.ProgressBar.Horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_bar" >

            <ImageView
                android:id="@+id/signup_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:src="@drawable/ic_arrow_left"
                android:layout_marginStart="16dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/signup_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_signup"
            app:layout_constraintTop_toBottomOf="@id/signup_top_bar"
            app:layout_constraintBottom_toTopOf="@id/btn_ll" />

        <LinearLayout
            android:id="@+id/btn_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/signup_birth_skip"
                android:layout_marginEnd="4dp"
                android:enabled="true"
                android:textSize="16sp"
                android:stateListAnimator="@null"
                android:visibility="gone"
                android:fontFamily="@font/pretendard_bold"
                android:background="@drawable/selector_gender"
                android:textColor="@drawable/selector_gender_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.8"
                android:text="@string/next_btn"
                android:enabled="true"
                android:textSize="16sp"
                android:stateListAnimator="@null"
                android:fontFamily="@font/pretendard_bold"
                android:background="@drawable/selector_main_btn"
                android:textColor="@drawable/selector_main_btn" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="picture"
            type="com.daval.routebox.domain.model.ActivityPictureAlbum" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.route.write.tracking.RoutePictureAlbumViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imageUri="@{picture.uri}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                android:textAlignment="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@{picture.selectedNumber == null ? @color/white : @color/main}"
                app:cardCornerRadius="28dp"
                app:strokeColor="@{picture.selectedNumber == null ? @color/icon_stroke_color : @color/transparent}"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{picture.selectedNumber == null ? View.GONE : View.VISIBLE}"
                    android:text="@{picture.selectedNumber == null ? `` : String.valueOf(picture.selectedNumber)}"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    style="@style/body_b_m" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
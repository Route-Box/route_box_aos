<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/setting_service_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_service_1"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            style="@style/body_b_m"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintStart_toStartOf="parent" />
        
        <ImageView
            android:id="@+id/setting_service_1_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@id/setting_service_1"
            app:layout_constraintBottom_toBottomOf="@id/setting_service_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/title_black" />

        <TextView
            android:id="@+id/setting_service_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_service_2"
            android:layout_marginStart="22dp"
            android:layout_marginTop="32dp"
            style="@style/body_b_m"
            app:layout_constraintTop_toBottomOf="@id/setting_service_1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/setting_service_2_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@id/setting_service_2"
            app:layout_constraintBottom_toBottomOf="@id/setting_service_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/title_black" />

        <TextView
            android:id="@+id/setting_service_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_service_3"
            android:layout_marginStart="22dp"
            android:layout_marginTop="32dp"
            style="@style/body_b_m"
            app:layout_constraintTop_toBottomOf="@id/setting_service_2"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/setting_service_3_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@id/setting_service_3"
            app:layout_constraintBottom_toBottomOf="@id/setting_service_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/title_black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
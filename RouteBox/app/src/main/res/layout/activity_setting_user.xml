<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.user.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_info"
                style="@style/body_b_l"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/user_profile_cv"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:imageUrl="@{viewModel.tempUserInfo.profileImageUrl}"
                        app:placeHolder="@{@drawable/ic_profile_default}"
                        tools:src="@drawable/ic_profile_default" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/camera_cv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="@color/gray7"
                    app:strokeColor="@color/gray6"
                    app:strokeWidth="1dp"
                    app:layout_constraintBottom_toBottomOf="@id/user_profile_cv"
                    app:layout_constraintEnd_toEndOf="@id/user_profile_cv">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_camera"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/nickname_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="22dp"
                    android:text="@string/nickname"
                    style="@style/body_r_xs"
                    app:layout_constraintTop_toBottomOf="@id/user_profile_cv"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="*"
                    android:textColor="@color/red1_warning"
                    style="@style/body_r_xs"
                    app:layout_constraintTop_toTopOf="@id/nickname_title"
                    app:layout_constraintBottom_toBottomOf="@id/nickname_title"
                    app:layout_constraintStart_toEndOf="@id/nickname_title" />

                <EditText
                    android:id="@+id/nickname_et"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:hint="@string/signup_nickname_et"
                    android:background="@color/transparent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="20dp"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:inputType="text"
                    android:maxLength="8"
                    android:theme="@style/EditTextTheme"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nickname_title"
                    app:layout_constraintEnd_toStartOf="@id/nickname_length"
                    style="@style/body_r_l"/>

                <TextView
                    android:id="@+id/nickname_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.tempUserInfo.nickname.length())}"
                    android:textSize="12sp"
                    style="@style/body_b_xs"
                    android:textColor="@color/gray4"
                    app:layout_constraintTop_toTopOf="@id/nickname_et"
                    app:layout_constraintBottom_toBottomOf="@id/nickname_et"
                    app:layout_constraintEnd_toStartOf="@id/nickname_max_length" />

                <TextView
                    android:id="@+id/nickname_max_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/8"
                    android:textSize="12sp"
                    android:layout_marginEnd="22dp"
                    style="@style/body_b_xs"
                    android:textColor="@color/gray4"
                    app:layout_constraintTop_toTopOf="@id/nickname_et"
                    app:layout_constraintBottom_toBottomOf="@id/nickname_et"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/nickname_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray5"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="22dp"
                    app:layout_constraintTop_toBottomOf="@id/nickname_et"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/birth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="22dp"
                    android:text="@string/birth"
                    style="@style/body_r_xs"
                    app:layout_constraintTop_toBottomOf="@id/nickname_line"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/birth_et"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:hint="@string/birth"
                    android:background="@color/transparent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="20dp"
                    android:textCursorDrawable="@null"
                    android:focusable="false"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:theme="@style/EditTextTheme"
                    android:text="@{viewModel.tempUserInfo.birthDay}"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birth_title"
                    app:layout_constraintEnd_toStartOf="@id/birth_arrow_iv"
                    style="@style/body_r_l"/>

                <ImageView
                    android:id="@+id/birth_arrow_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/gray4"
                    app:layout_constraintTop_toTopOf="@id/birth_et"
                    app:layout_constraintBottom_toBottomOf="@id/birth_et"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/birth_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray5"
                    android:layout_marginTop="6dp"
                    android:layout_marginHorizontal="22dp"
                    app:layout_constraintTop_toBottomOf="@id/birth_et"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/gender_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="22dp"
                    android:text="@string/gender"
                    style="@style/body_r_xs"
                    app:layout_constraintTop_toBottomOf="@id/birth_line"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/gender_title"
                    app:layout_constraintStart_toStartOf="parent">

                    <RadioGroup
                        android:id="@+id/gender_radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="80dp">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/gender_m"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:paddingHorizontal="20dp"
                            android:background="@drawable/selector_gender"
                            android:textColor="@drawable/selector_gender_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/signup_gender_m"
                            style="@style/body_r_m" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/gender_f"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginHorizontal="6dp"
                            android:paddingHorizontal="20dp"
                            android:background="@drawable/selector_gender"
                            android:textColor="@drawable/selector_gender_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/signup_gender_f"
                            style="@style/body_r_m" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/gender_x"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:paddingHorizontal="20dp"
                            android:background="@drawable/selector_gender"
                            android:textColor="@drawable/selector_gender_text"
                            android:button="@null"
                            android:textAlignment="center"
                            android:text="@string/signup_gender_x"
                            style="@style/body_r_m" />

                    </RadioGroup>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/save_btn"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="20dp"
            android:enabled="@{viewModel.userInfo.introduction.length() > 0 ? true : false}"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"
            android:background="@drawable/selector_main_btn"
            android:textColor="@drawable/selector_main_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
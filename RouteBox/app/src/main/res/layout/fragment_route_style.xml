<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <import type="com.example.routebox.domain.model.FilterType"/>
        <import type="android.view.View"/>
        <variable
            name="isFilterScreen"
            type="Boolean" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:showIn="@layout/activity_filter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{isFilterScreen ? @string/filter_question1_with_whom : @string/route_question1_with_whom}"
            tools:text="@string/filter_question1_with_whom"
            style="@style/body_b_l"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question1_with_whom_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:animateLayoutChanges="false"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            tools:listitem="@layout/item_filter_option"
            tools:itemCount="3"/>

        <TextView
            android:id="@+id/question2_how_many_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@{isFilterScreen ? @string/filter_question2_how_many : @string/route_question2_how_many}"
            tools:text="@string/filter_question2_how_many"
            style="@style/body_b_l"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question2_how_many_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            tools:listitem="@layout/item_filter_option"
            tools:itemCount="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@{isFilterScreen ? @string/filter_question3_how_long : @string/route_question3_how_long}"
            tools:text="@string/filter_question3_how_long"
            style="@style/body_b_l"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question3_how_long_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            tools:listitem="@layout/item_filter_option"
            tools:itemCount="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@{isFilterScreen ? @string/filter_question4_route_style : @string/route_question4_route_style}"
            tools:text="@string/filter_question4_route_style"
            style="@style/body_b_l"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{isFilterScreen ? View.GONE : View.VISIBLE}"
            android:text="@{@string/route_style_maximum(FilterType.ROUTE_STYLE.maxSelectionCount)}"
            style="@style/body_r_xs"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question4_route_style_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            tools:listitem="@layout/item_filter_option"
            tools:itemCount="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@{isFilterScreen ? @string/filter_question5_means_of_transportation : @string/route_question5_means_of_transportation}"
            tools:text="@string/filter_question5_means_of_transportation"
            style="@style/body_b_l"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/question5_means_of_transportation_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            tools:listitem="@layout/item_filter_option"
            tools:itemCount="1"/>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.daval.routebox.presentation.utils.DateConverter"/>
        <variable
            name="route"
            type="com.daval.routebox.domain.model.RouteDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/route_detail_top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/route_detail_close_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"/>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/route_detail_sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/route_detail_writer_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="25dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/route_detail_writer_profile_cv"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <ImageView
                            android:id="@+id/route_detail_writer_profile_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:imageUrl="@{route.profileImageUrl}"
                            app:placeHolder="@{@drawable/ic_profile_default}"
                            tools:src="@drawable/ic_profile_default"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/route_detail_writer_nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{route.nickname}"
                        tools:text="사용자 이름"
                        android:textColor="@color/title_black"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/route_detail_writer_profile_cv"
                        style="@style/body_b_s"/>

                    <TextView
                        android:id="@+id/route_detail_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{DateConverter.getFormattedCreatedDateTime(route.createdAt)}"
                        tools:text="2일 전"
                        android:textColor="@color/gray3"
                        app:layout_constraintStart_toStartOf="@id/route_detail_writer_nickname_tv"
                        app:layout_constraintTop_toBottomOf="@id/route_detail_writer_nickname_tv"
                        style="@style/body_r_xs"/>

                    <ImageView
                        android:id="@+id/route_detail_more_iv"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_more"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="22dp">

                    <TextView
                        android:id="@+id/route_detail_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:myRouteTitleText="@{route.routeName}"
                        tools:text="아직 루트 제목이 없어요"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/heading_s"/>

                    <ImageView
                        android:id="@+id/route_detail_private_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:visibility="@{route.isPublic ? View.GONE : View.VISIBLE}"
                        android:src="@drawable/ic_lock"
                        app:tint="@color/gray2"
                        app:layout_constraintTop_toTopOf="@id/route_detail_title_tv"
                        app:layout_constraintBottom_toBottomOf="@id/route_detail_title_tv"
                        app:layout_constraintStart_toEndOf="@id/route_detail_title_tv"/>

                    <TextView
                        android:id="@+id/route_detail_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:myRouteContentText="@{route.routeDescription}"
                        tools:text="수정하기를 눌러 제목과 내용을 추가해주세요"
                        android:textColor="@color/gray1"
                        app:layout_constraintTop_toBottomOf="@id/route_detail_title_tv"
                        app:layout_constraintStart_toStartOf="@id/route_detail_title_tv"
                        style="@style/body_r_s"/>

                    <!-- 맵뷰 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/route_detail_map_cv"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_marginTop="20dp"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@id/route_detail_content_tv"
                        app:layout_constraintStart_toStartOf="@id/route_detail_title_tv"
                        app:cardCornerRadius="12dp">

                        <fragment
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:id="@+id/route_detail_map_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/ivMapTransparent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:color/transparent"/>
                        </fragment>

                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/route_detail_tag_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/route_detail_map_cv"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_route_tag"/>

                    <LinearLayout
                        android:id="@+id/route_detail_button_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/route_detail_tag_rv"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/route_detail_download_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="10"
                            android:textColor="@color/gray3"
                            android:drawableStart="@drawable/ic_download"
                            style="@style/body_b_xs"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/route_detail_comment_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:text="10"
                            android:textColor="@color/gray3"
                            android:drawableStart="@drawable/ic_comment"
                            style="@style/body_b_xs"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="40dp"
                    android:background="#ECF0F3"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/route_detail_activity_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="32dp"
                    android:paddingHorizontal="22dp"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_activity"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
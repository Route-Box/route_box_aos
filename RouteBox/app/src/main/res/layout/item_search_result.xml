<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.daval.routebox.presentation.utils.DateConverter"/>
        <variable
            name="route"
            type="com.daval.routebox.domain.model.SearchRoute" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="65dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_search_result_profile_cv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/item_search_result_profile_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_profile_default"
                app:placeHolder="@{@drawable/ic_profile_default}"
                app:imageUrl="@{route.profileImageUrl}"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{route.nickname}"
            tools:text="사용자 이름"
            app:layout_constraintStart_toEndOf="@id/item_search_result_profile_cv"
            app:layout_constraintTop_toTopOf="@id/item_search_result_profile_cv"
            app:layout_constraintBottom_toBottomOf="@id/item_search_result_profile_cv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            style="@style/body_b_s"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_search_result_post_cover_cv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_search_result_profile_cv"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/item_search_result_post_cover_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imageUrl="@{route.routeImageUrl}"
                app:placeHolder="@{@drawable/ic_thumbnail_default}"
                tools:src="@drawable/ic_thumbnail_default"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/item_search_result_post_cover_cv"
            app:layout_constraintStart_toEndOf="@id/item_search_result_post_cover_cv"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/item_search_result_route_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="@{route.routeName}"
                tools:text="루트 제목"
                style="@style/body_r_m"/>

            <TextView
                android:id="@+id/item_search_result_route_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="@{route.routeDescription}"
                tools:text="루트 내용"
                android:textColor="@color/gray3"
                style="@style/body_r_s"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_search_result_purchase_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_download"
                    android:gravity="center_vertical"
                    android:text="@{String.valueOf(route.purchaseCount)}"
                    tools:text="10"
                    android:textColor="@color/gray3"
                    style="@style/body_b_xs"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_search_result_comment_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_comment"
                    android:gravity="center_vertical"
                    android:text="@{String.valueOf(route.commentCount)}"
                    tools:text="10"
                    android:textColor="@color/gray3"
                    style="@style/body_b_xs"/>

                <TextView
                    android:id="@+id/item_search_result_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@{DateConverter.getFormattedCreatedDateTime(route.createdAt)}"
                    tools:text="2024.05.06"
                    android:textColor="@color/gray3"
                    style="@style/body_r_s"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
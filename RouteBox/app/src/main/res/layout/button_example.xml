<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="large_fill_default"
        style="@style/large_fill_default" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="large_fill_disable"
        style="@style/large_fill_disable" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="large_outline_disable"
        style="@style/large_outline_disable" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="large_outline_default"
        style="@style/large_outline_default" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="large_outline_default_highlight"
        style="@style/large_outline_default_highlight" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="small_fill_default"
        style="@style/small_fill_default" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="small_fill_disable"
        style="@style/small_fill_disable" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="small_outline_disable"
        style="@style/small_outline_disable" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="small_outline_default"
        style="@style/small_outline_default" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="small_outline_default_highlight"
        style="@style/small_outline_default_highlight"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.daval.routebox.domain.model.User" />
        <variable
            name="viewModel"
            type="com.daval.routebox.presentation.ui.user.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mypage_top_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="26dp"
            android:paddingVertical="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/menu_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_top_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_top_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profile_cv"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        app:cardCornerRadius="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:imageUrl="@{viewModel.userInfo.profileImageUrl}"
                            app:placeHolder="@{@drawable/ic_profile_default}"
                            tools:src="@drawable/ic_profile_default" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/nickname_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.userInfo.nickname}"
                        android:layout_marginTop="12dp"
                        style="@style/heading_m"
                        app:layout_constraintTop_toBottomOf="@id/profile_cv"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="닉네임" />

                    <TextView
                        android:id="@+id/route_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/route_kor"
                        style="@style/body_r_m"
                        app:layout_constraintTop_toBottomOf="@id/nickname_tv"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/route_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@{String.valueOf(viewModel.userInfo.numOfRoutes)}"
                        style="@style/body_b_m"
                        app:layout_constraintTop_toTopOf="@id/route_num_title"
                        app:layout_constraintBottom_toBottomOf="@id/route_num_title"
                        app:layout_constraintStart_toEndOf="@id/route_num_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="0개" />

                    <TextView
                        android:id="@+id/introduction_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.userInfo.introduction}"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/gray4"
                        android:layout_marginEnd="4dp"
                        style="@style/body_r_m"
                        app:layout_constraintTop_toBottomOf="@id/route_num_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/pencil_iv"
                        tools:text="설명설명소개소개설명설명소개소개설명설명소개소개설명설명소개소개설명설명소개소개" />

                    <ImageView
                        android:id="@+id/pencil_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pencil"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/introduction_tv"
                        app:layout_constraintBottom_toBottomOf="@id/introduction_tv" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/gray6"
                        app:layout_constraintTop_toBottomOf="@id/introduction_tv"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/route_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:paddingHorizontal="22dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_top_info"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_xl"
                        android:textColor="@color/gray1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="00의 취향은" />

                    <!-- FlowLayout 쓰기 -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:flexWrap="wrap"
                        app:layout_constraintTop_toBottomOf="@id/type_title"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="40dp"
                            app:cardBackgroundColor="#3344C3B9"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="12dp">

                                <TextView
                                    android:id="@+id/location_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#"
                                    android:textColor="@color/gray2"
                                    style="@style/body_b_s"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.userInfo.mostVisitedLocation}"
                                    android:layout_marginStart="2dp"
                                    style="@style/body_b_s"
                                    app:layout_constraintStart_toEndOf="@id/location_tv"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="경주" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/where_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="6dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/where"
                                android:textColor="@color/gray3"
                                style="@style/body_r_s"
                                app:layout_constraintStart_toEndOf="@id/location_tv"
                                app:layout_constraintTop_toTopOf="parent" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="40dp"
                            app:cardBackgroundColor="#3344C3B9"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="12dp">

                                <TextView
                                    android:id="@+id/route_style_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#"
                                    android:textColor="@color/gray2"
                                    style="@style/body_b_s"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{viewModel.userInfo.mostTaggedRouteStyles}"
                                    android:layout_marginStart="2dp"
                                    style="@style/body_b_s"
                                    app:layout_constraintStart_toEndOf="@id/route_style_tv"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="자연 만끽 🌿" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/most_route_style_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="6dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mostVisitedLocation"
                                android:textColor="@color/gray3"
                                style="@style/body_r_s"
                                app:layout_constraintStart_toEndOf="@id/location_tv"
                                app:layout_constraintTop_toTopOf="parent" />

                        </com.google.android.material.card.MaterialCardView>

                    </com.google.android.flexbox.FlexboxLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/route_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:paddingHorizontal="22dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/route_type">

                    <TextView
                        android:id="@+id/user_route_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/user_route_title(viewModel.userInfo.nickname)}"
                        style="@style/title_xl"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="00의 루트박스" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/user_route_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:overScrollMode="never"
                        app:layout_constraintTop_toBottomOf="@id/user_route_title_tv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_user_route" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_route_edit"
    app:startDestination="@id/routeEditFragment">

    <!-- 루트 수정 -->
    <fragment
        android:id="@+id/routeEditFragment"
        android:name="com.daval.routebox.presentation.ui.route.edit.RouteEditFragment"
        android:label="RouteEditFragment"
        tools:layout="@layout/fragment_route_edit">
        <action
            android:id="@+id/action_routeEditFragment_to_routeEditActivityFragment"
            app:destination="@id/routeEditActivityFragment"/>
        <action
            android:id="@+id/action_routeEditFragment_to_routeCompleteActivity"
            app:destination="@id/routeCompleteActivity" />
    </fragment>

    <!-- 활동 수정 -->
    <fragment
        android:id="@+id/routeEditActivityFragment"
        android:name="com.daval.routebox.presentation.ui.route.edit.RouteEditActivityFragment"
        android:label="RouteEditActivityFragment"
        tools:layout="@layout/fragment_route_edit_activity">
    </fragment>

    <!-- 루트 마무리하기 -->
    <activity
        android:id="@+id/routeCompleteActivity"
        android:name="com.daval.routebox.presentation.ui.route.RouteCompleteActivity"
        android:label="RouteCompleteActivity"
        tools:layout="@layout/activity_route_complete" />

</navigation>
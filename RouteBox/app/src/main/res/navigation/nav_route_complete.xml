<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_route_edit"
    app:startDestination="@id/routeCompleteFragment">

    <!-- 루트 마무리 -->
    <fragment
        android:id="@+id/routeCompleteFragment"
        android:name="com.example.routebox.presentation.ui.route.write.RouteCompleteFragment"
        android:label="RouteCompleteFragment"
        tools:layout="@layout/fragment_route_complete" >
        <action
            android:id="@+id/action_routeCompleteFragment_to_routeEditActivityFragment"
            app:destination="@id/routeEditActivityFragment" />
    </fragment>

    <!-- 활동 수정 -->
    <fragment
        android:id="@+id/routeEditActivityFragment"
        android:name="com.example.routebox.presentation.ui.route.edit.RouteEditActivityFragment"
        android:label="RouteEditActivityFragment"
        tools:layout="@layout/fragment_route_edit_activity">
    </fragment>

</navigation>
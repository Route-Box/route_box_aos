<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
<!--    </style>-->

    <style name="BottomSheetDialogStyle"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModel</item>
    </style>

    <style name="BottomSheetModel"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog_radius</item>
    </style>

    <!-- 인사이트 통계 설명 -->
    <style name="insight_statistics_description_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#3E474E</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- 날짜 선택 -->
    <style name="common_date_selected_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:background">@drawable/radius_16_outline_gray</item>
        <item name="android:drawableStart">@drawable/ic_calender</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title_black</item>
    </style>

    <!-- 시간 선택 -->
    <style name="common_time_selected_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:background">@drawable/radius_16_outline_gray</item>
        <item name="android:drawableStart">@drawable/ic_clock</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title_black</item>
    </style>

    <style name="calendar_date_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>